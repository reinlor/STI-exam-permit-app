{
    "version": 2,
    "name": "exam-permit-validation",
    "builds": [
      {
        "src": "examPermit/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "examPermit/dist"
        }
      },
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/examPermit/dist/$1"
      }
    ],
    "env": {
      "MONGO_URL": "mongodb://localhost:27017/examPermitDB",
      "PORT": "8000"
    }
  }